{% extends 'base.html.twig' %}

{% block title %}Hello StagiaireController!{% endblock %}

{% block body %}
    <div class="input_container">
        <div style="display: flex; justify-content: end;  width: 50% !important;">
            <a href="{{path ('stagiaire')}}" style="color: red; padding-bottom: 5px;">return to liste stagiaire...</a>
        </div>
        <div class="border">
            {{ form_start(form) }}
            <div class="form">
                {% if edit %}
                <h3 class="edit_text">Edit le Stagiaire</h3>
                {% else %}
                    <h3 class="edit_text">Ajouter le Stagiaire</h3>
                {% endif %}

                <div class="form_control">
                    {{ form_label(form.nom, 'Nom de Stagiaire') }}
                    {{ form_row(form.nom) }}
                </div>
        
                <div class="form_control">
                    {{ form_label(form.prenom, 'Prénom de stagiaire') }}
                    {{ form_row(form.prenom) }}
                </div>
                <div class="form_control">
                    {{ form_label(form.datenaissance, 'Date de naissance') }}
                    {{ form_row(form.datenaissance) }}
                </div>
                <div class="form_control">
                    {{ form_label(form.mobile, 'Numéro de Téléphone') }}
                    {{ form_row(form.mobile) }}
                </div>
                <div class="form_control">
                    {{ form_label(form.email, 'Email') }}
                    {{ form_row(form.email) }}
                </div>
                <div class="form_control">
                    {{ form_label(form.ville, 'Ville') }}
                    {{ form_row(form.ville) }}
                </div>
            </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
