{% extends 'base.html.twig' %}

{% block title %}Hello StagiaireController!{% endblock %}

{% block body %}
<div class="output_container">
    <table class="table">
        <div class="flex">
            <a class="btn_add" href="{{path('add_stagiaire')}}">Ajouter le Stagiaire</a>
        </div>
        <thead>
            <tr>
                <th>Nom & Pr√©nom</th>
                <th>Date de Naissance</th>
                <th>Mobile</th>
                <th>Email</th>
                <th>Ville</th>
                <th>Detail de Stagiaire</th>
                <th>Modifier le Stagiaire</th>
                <th>Supprimer le Stagiaire</th>
            </tr>
        </thead>
        <tbody>
            {% for form in forms %}
                <tr>
                    <td>{{form.nom}} {{form.prenom}}</td>
                    <td>{{form.datenaissance|date("d/m/Y")}}</td>
                    <td>{{form.mobile}}</td>
                    <td>{{form.email}}</td>
                    <td>{{form.ville}}</td>
                    <td><a href="{{path('show_stagiaire', {'id': form.id})}}"><i class="fa-solid fa-list"></i></a></td>
                    <td><a href="{{path('edit_stagiaire', {'id': form.id})}}"><i class="fa-solid fa-pen-to-square"></i></a></td>
                    <td><a href="{{path('delete_stagiaire', {'id': form.id})}}"><i class="fa-solid fa-trash-can"></i></a></td>
                </tr>
            {% endfor %}
            
            
        </tbody>
    </table>
</div>
{% endblock %}
