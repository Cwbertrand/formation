{% extends 'base.html.twig' %}

{% block title %}Session | Elan Formation{% endblock %}

{% block fsnav %} {% endblock %}
{% block body %}
<div class="output_container">
    <table class="table">
        <div class="flex">
            <a class="btn_add" href="{{path('add_instituleSession')}}">Ajouter la session</a>
            <a class="btn_add" href="{{path('add_programme')}}">Ajouter le programme</a>
        </div>
        <thead>
            <tr>
                <th>Institulé Session</th>
                <th>Date de Début</th>
                <th>Date de Fin</th>
                <th>Nb place théorique</th>
                <th>Nb place Reservé</th>
                <th>Nb place Restantes</th>
                <th>Détails Programme</th>
                <th>Modifier la session</th>
                <th>Supprimer la session</th>
            </tr>
        </thead>
        <tbody>
            {% for form in forms %}
                <tr>
                    <td>{{form.themesession}}</td>
                    <td>{{form.datecommerce|date('d/m/Y')}}</td>
                    <td>{{form.datefin|date('d/m/Y')}}</td>
                    <td>{{form.placetotal}}</td>
                    <td>{{form.PlaceReserve}}</td>
                    <td>{{form.PlaceRestant}}</td> 
                    <td><a href="{{path('show_instituleSession', {'id': form.id})}}"><i class="fa-solid fa-list"></i></a></td>
                    <td><a href="{{path('edit_instituleSession', {'id': form.id})}}"><i class="fa-solid fa-pen-to-square"></i></a></td>
                    <td><a href="{{path('delete_instituleSession', {'id': form.id})}}"><i class="fa-solid fa-trash-can"></i></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
