{% extends 'base.html.twig' %}

{% block title %}Hello FormateurController!{% endblock %}

{% block body %}
<div class="input_container">
    <div class="border">
        {{ form_start(form) }}
        
        <div class="form">
            {% if edit %}
                <h3 class="edit_text">Edit le Formateur</h3>
            {% else %}
                <h3 class="edit_text">Ajouter le Formateur</h3>
            {% endif %}

            <div class="form_control">
                {{ form_label(form.nom, 'Nom de Formateur') }}
                {{ form_row(form.nom) }}
            </div>
    
            <div class="form_control">
                {{ form_label(form.prenom, 'Pr√©nom de Formateur') }}
                {{ form_row(form.prenom) }}
            </div>
        </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
