{% extends 'base.html.twig' %}

{% block title %}Hello FormateurController!{% endblock %}

{% block fsnav %} {% endblock %}
{% block body %}
<div class="output_container">
    <table class="table">
        <div class="flex">
            <a class="btn_add" href="{{path('add_formateur')}}">Ajouter les formateur</a>
        </div>
        <thead>
            <tr>
                <th>Nom & Pr√©nom</th>
                <th>Detail de Formateur</th>
                <th>Modifier le Formateur</th>
                <th>Supprimer le Formateur</th>
            </tr>
        </thead>
        <tbody>
            {% for form in forms %}
                <tr>
                    <td>{{form.nom}} {{form.prenom}}</td>
                    <td><a href="{{path('show_formateur', {'id': form.id})}}"><i class="fa-solid fa-list"></i></a></td>
                    <td><a href="{{path('edit_formateur', {'id': form.id})}}"><i class="fa-solid fa-pen-to-square"></i></a></td>
                    <td><a href="{{path('delete_formateur', {'id': form.id})}}"><i class="fa-solid fa-trash-can"></i></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
