{% extends 'base.html.twig' %}

{% block title %}Log in! | Elan Formation{% endblock %}

{% block body %}
<div class="register_container">
    <form method="post">
        {% if error %}
            <div class="alert alert_danger">{{ error }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        
        <h1 class="register_title">Please sign in</h1>
        <div class="card">
            <div class="flex_login">
                <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form_control" autocomplete="email" required autofocus>
            </div>
            <div class="flex_login">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form_control" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    </div>
    </form>
</div>
{% endblock %}
