{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<style>
    body{
        overflow: hidden;
    }
    .edit_header{
        text-align: center;
        padding: 20px 0px;
    }

    .form_control div{
        display: flex;
        flex-direction: column;
    }

    .form_control label{
        padding-top: 10px;
    }

    .form_control input {
        width: 40vw;
        padding: 10px;
        margin-top: 10px;
        border-radius: 7px;
        font-size: 15px;
    }
    input[type="password" i] {
        width: 40vw;
        padding: 10px;
        margin-top: 10px;
        border-radius: 7px;
        font-size: 15px;
    }
</style>
<div class="input_container padding_top">
    <div class="border">
        <h1 class="edit_header">Reset your password</h1>
        
        {{ form_start(resetForm) }}
        <div class="form_control">
            {{ form_row(resetForm.plainPassword) }}
        </div>
            <button class="btn btn-primary">Reset password</button>
        
        {{ form_end(resetForm) }}
    </div>
</div>
{% endblock %}
