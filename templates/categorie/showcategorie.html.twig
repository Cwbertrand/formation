{% extends 'base.html.twig' %}

{% block title %}Categorie detaille | Elan Formation{% endblock %}

{% block fsnav %} {% endblock %}
{% block body %}
<section class="programme">
    <p><strong>Categorie: </strong> {{detaileCategorie.nomcategorie}}</p>
    {{ dump(detaileCategorie) }}
</section>
<section class="session">
    <table class="table">
        <thead>
            <tr>
                <th>Nom de Module</th>
                <th>Modifier le Module</th>
                <th>Supprimer le Module</th>
            </tr>
        </thead>
        <tbody>
            {% for module in detaileCategorie.modules %}
                <tr>
                    <td>{{module.nommodule}}</td>
                    <td><a href=""><i class="fa-solid fa-pen-to-square"></i></a></td>
                    <td><a href=""><i class="fa-solid fa-trash-can"></i></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table> 
</section>
{% endblock %}

