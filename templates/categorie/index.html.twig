{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}
<div class="output_container">
    <table class="table">
        <div class="flex">
            <a class="btn_add" href="{{path('add_categorie')}}">Ajouter le categorie</a>
        </div>
        <thead>
            <tr>
                <th>Categorie</th>
                <th>Detaille le categorie</th>
                <th>Modifier le categorie</th>
                <th>Supprimer le Categorie</th>
            </tr>
        </thead>
        <tbody>
            {% for form in forms %}
                <tr>
                    <td>{{form.nomcategorie}}</td>
                    <td><a href="{{path('show_categorie', {'id': form.id})}}"><i class="fa-solid fa-list"></i></a></td>
                    <td><a href="{{path('edit_categorie', {'id': form.id})}}"><i class="fa-solid fa-pen-to-square"></i></a></td>
                    <td><a href="{{path('delete_categorie', {'id': form.id})}}"><i class="fa-solid fa-trash-can"></i></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
